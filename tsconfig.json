{
  "compilerOptions": {
    "module": "esNext",
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "outDir": "dist"
  },
  "exclude": ["./**/node_modules"],
  "include": ["./src/**/*.ts"]
}

